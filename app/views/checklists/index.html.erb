<% if current_user == nil %>
<% elsif current_user.admin %>
<h1>Checklists</h1>
<% @checklists.each do |c|%>
  <p>
    <%= link_to c.name, checklist_path(c.id) %>----<%= link_to 'Edit', edit_checklist_path(c.id) %> ----
			<% if c.name ==nil%>
			<% else %> 
				<%= link_to 'Delete', checklist_path(c.id), :action => :post, :method => :delete %>
			<% end %>
  </p>
  <br>
  <br>
<% end %>
  <h3><%= link_to "New Checklist", new_checklist_path %></h3>

<% else %>
<div id='checklists'>
<h2>Click a checklist to fill it out!</h2>
  <% @checklists.each do |c|%>
	<h3>
  	<%= link_to c.name, edit_response_path(c.id), id: c.id %>

		<%= c.total_c_questions(c.id)%>
		<%= Response.find(@user).counts("Yes") %>
		<%= Response.find(@user).counts("No") %>
		<%= Response.find(@user).counts("In Progress") %>
		<%= ((Response.find(@user).counts("Yes").to_f)/(c.total_c_questions(c.id).to_f) * 100) %>
	</p>

<% end %>
</div>
<% end %>
