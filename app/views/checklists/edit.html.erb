<%= form_for @checklist do |f| %>


<%= f.label :name %>
<%= f.text_field :name %>
<br>
    <%= f.fields_for :questions do |builder| %>
  <p>
      <%= builder.label :Question_text %>
      <%= builder.text_area :description %>
    
     
      <%= builder.select :priority ,[['Required', 'Required'], ['Strongly Recommended', 'Strongly Recommended'],['Recommended','Recommended']] %>
      
      <% end %>
</p>

<div class = "question_form"></div>
<%= link_to "Add Question", new_question_path, remote: true %>

  <%= f.submit %>

  <% end %>